
public class Tailor extends Thread {

	private String name;
	private Workshop workshop;
	private int clothCount;
	
	private static final int CLOTH_WORK_TIME = 10;
	
	private int efficiency;
	
	public Tailor(String name, int efficiency) {
		this.name = name;
		this.clothCount = 0;
		this.efficiency = efficiency;
	}
	
	public void setWorkshop(Workshop workshop) {
		this.workshop = workshop;
	}

	@Override
	public void run() {
		while (workshop.getOrder()) {
			try {
				Thread.sleep(CLOTH_WORK_TIME * (100 - efficiency));
				++clothCount;
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}
	
	public String toString() {
		return name + ", clothes: " + clothCount; 
	}
}
