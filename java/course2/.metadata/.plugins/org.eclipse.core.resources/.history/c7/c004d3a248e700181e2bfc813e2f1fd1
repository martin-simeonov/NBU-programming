
public class Tailor implements Runnable {

	private String name;
	private Workshop workshop;
	private int clothCount;
	
	private static final int CLOTH_WORK_TIME = 100;
	
	public Tailor(String name, Workshop workshop) {
		this.name = name;
		this.workshop = workshop;
		this.clothCount = 0;
	}

	@Override
	public void run() {
		while (workshop.getCloth()) {
			Thread.sleep(100);
		}
	}
	
}
